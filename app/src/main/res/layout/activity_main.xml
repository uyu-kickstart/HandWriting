<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageButton
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:id="@+id/imageButton"
        android:background="@drawable/nin"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/dview"
        android:layout_alignLeft="@+id/dview"
        android:layout_alignStart="@+id/dview"
        android:layout_marginTop="40dp" />

    <ImageButton
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/trash"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/dview"
        android:layout_alignRight="@+id/dview"
        android:layout_alignEnd="@+id/dview"
        android:layout_marginTop="40dp" />

    <view
        android:layout_width="300dp"
        android:layout_height="300dp"
        class="net.azurewebsites.transam3y.handwriting.DrawView"
        android:id="@+id/dview"
        android:background="#FFFF00"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />


</RelativeLayout>
